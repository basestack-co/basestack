# DATABASE

# Connection URL to your database using PgBouncer.
DATABASE_URL=

# Direct connection URL to the database used for migrations
DIRECT_DATABASE_URL=

# AUTHENTICATION

# generate a https://generate-secret.vercel.app/32
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=

# AUTHENTICATION - GITHUB
# BetterAuth with GitHub as a provider
# See more documentation here: https://www.better-auth.com/docs/authentication/github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# AUTHENTICATION - GOOGLE
# BetterAuth with Google as a provider
# See more documentation here: https://www.better-auth.com/docs/authentication/google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# BACKGROUND JOBS - CONFIGURATION

UPSTASH_WORKFLOW_URL= # Set a tunnel when working local
QSTASH_TOKEN=
QSTASH_URL=
QSTASH_CURRENT_SIGNING_KEY=
QSTASH_NEXT_SIGNING_KEY=

# PAYMENTS - CONFIGURATION

POLAR_ACCESS_TOKEN=

# REDIS - CONFIGURATION

UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# CORS - API CONFIGURATION

API_ACCESS_CONTROL_ALLOW_ORIGIN="http://localhost:3004"

# EMAIL - CONFIGURATION

# The email address that all outgoing emails will be sent from
EMAIL_FROM="Hello. <hello@yourdomain.com>"
# The SMTP host of your email provider
EMAIL_SMTP_HOST=
# The SMTP port of your email provider
EMAIL_SMTP_PORT=465
# The secure connection prefix required by your email provider
EMAIL_SMTP_SECURE=false
# The username for authenticating with your SMTP provider
EMAIL_SMTP_AUTH_USER=
# The password for authenticating with your SMTP provider
EMAIL_SMTP_AUTH_PASSWORD=

# GENERAL - CONFIGURATION

NEXT_PUBLIC_APP_MODE="local" # local | development | staging | production