{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "EMAIL_FROM",
    "EMAIL_SMTP_HOST",
    "EMAIL_SMTP_PORT",
    "EMAIL_SMTP_SECURE",
    "EMAIL_SMTP_AUTH_USER",
    "EMAIL_SMTP_AUTH_PASSWORD",
    "AUTH0_CLIENT_ID",
    "AUTH0_CLIENT_SECRET",
    "AUTH0_DOMAIN",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL"
  ],
  "tasks": {
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build",
        "lint"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test": {},
    "test:update": {},
    "test:watch": {
      "cache": false
    },
    "deploy": {
      "dependsOn": [
        "build",
        "test",
        "lint"
      ],
      "outputs": []
    },
    "@basestack/feature-flags#deploy": {
      "dependsOn": [
        "^build",
        "lint"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ],
      "env": [
        "DATABASE_URL",
        "DIRECT_DATABASE_URL"
      ]
    },
    "@basestack/forms#deploy": {
      "dependsOn": [
        "^build",
        "lint"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ],
      "env": [
        "DATABASE_URL",
        "DIRECT_DATABASE_URL",
        "CLOUDFLARE_ACCOUNT_ID",
        "CLOUDFLARE_API_TOKEN",
        "UPSTASH_WORKFLOW_URL",
        "QSTASH_TOKEN",
        "QSTASH_URL",
        "QSTASH_CURRENT_SIGNING_KEY",
        "QSTASH_NEXT_SIGNING_KEY"
      ]
    },
    "@basestack/landing-page#deploy": {
      "dependsOn": [
        "lint",
        "@basestack/design-system#build",
        "@basestack/hooks#build",
        "@basestack/utils#build"
      ],
      "outputs": [
        "out/**",
        ".next/**"
      ]
    },
    "@basestack/docs#deploy": {
      "dependsOn": [
        "lint",
        "@basestack/utils#build"
      ],
      "outputs": [
        "out/**",
        ".next/**"
      ],
      "env": [
        "NEXT_PUBLIC_UMAMI_WEBSITE_ID"
      ]
    },
    "@basestack/feature-flags#start": {
      "dependsOn": [],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "@basestack/forms#start": {
      "dependsOn": [],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    }
  }
}
