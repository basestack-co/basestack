{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build", "lint"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test": {},
    "test:update": {},
    "test:watch": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": []
    },
    "@basestack/feature-flags#deploy": {
      "dependsOn": ["^build", "lint"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "DATABASE_URL",
        "DIRECT_DATABASE_URL",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "AUTH0_CLIENT_ID",
        "AUTH0_CLIENT_SECRET",
        "AUTH0_DOMAIN",
        "API_RATE_LIMIT_MAX",
        "API_RATE_LIMIT_WINDOW_MS",
        "API_RATE_LIMIT_UNIQUE_TOKEN_PER_SECOND",
        "API_ACCESS_CONTROL_ALLOW_ORIGIN"
      ]
    },
    "@basestack/landing-page#deploy": {
      "dependsOn": [
        "lint",
        "@basestack/design-system#build",
        "@basestack/hooks#build",
        "@basestack/utils#build"
      ],
      "outputs": ["out/**", ".next/**"]
    },
    "@basestack/docs#deploy": {
      "dependsOn": ["lint", "@basestack/utils#build"],
      "outputs": ["out/**", ".next/**"],
      "env": ["NEXT_PUBLIC_UMAMI_WEBSITE_ID"]
    }
  }
}
