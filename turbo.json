{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "DATABASE_URL",
    "DIRECT_DATABASE_URL",
    "EMAIL_FROM",
    "EMAIL_SMTP_HOST",
    "EMAIL_SMTP_PORT",
    "EMAIL_SMTP_SECURE",
    "EMAIL_SMTP_AUTH_USER",
    "EMAIL_SMTP_AUTH_PASSWORD",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "BETTER_AUTH_SECRET",
    "BETTER_AUTH_URL",
    "NEXT_PUBLIC_APP_MODE",
    "UPSTASH_WORKFLOW_URL",
    "QSTASH_TOKEN",
    "QSTASH_URL",
    "QSTASH_CURRENT_SIGNING_KEY",
    "QSTASH_NEXT_SIGNING_KEY",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "POLAR_ACCESS_TOKEN",
    "CLOUDFLARE_ACCOUNT_ID",
    "CLOUDFLARE_API_TOKEN"
  ],
  "tasks": {
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build", "lint"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": [],
      "inputs": ["src/**", "**/*.{js,ts,tsx,jsx}", "*.{js,ts,tsx,jsx}"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "inputs": [
        "src/**",
        "**/*.{js,ts,tsx,jsx}",
        "*.{js,ts,tsx,jsx}",
        "**/*.test.*",
        "**/*.spec.*"
      ]
    },
    "test:coverage": {
      "inputs": [
        "src/**",
        "**/*.{js,ts,tsx,jsx}",
        "*.{js,ts,tsx,jsx}",
        "**/*.test.*",
        "**/*.spec.*"
      ],
      "outputs": ["coverage/**"]
    },
    "test:update": {
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": []
    },
    "@basestack/landing-page#deploy": {
      "dependsOn": [
        "lint",
        "@basestack/design-system#build",
        "@basestack/hooks#build",
        "@basestack/utils#build"
      ],
      "outputs": ["out/**", ".next/**"]
    },
    "@basestack/docs#deploy": {
      "dependsOn": ["lint", "@basestack/utils#build"],
      "outputs": ["out/**", ".next/**"],
      "env": []
    },
    "@basestack/feature-flags#start": {
      "dependsOn": [],
      "outputs": ["dist/**", ".next/**"]
    },
    "@basestack/feature-flags#deploy": {
      "dependsOn": ["^build", "lint"],
      "outputs": ["dist/**", ".next/**"],
      "env": []
    },
    "@basestack/forms#start": {
      "dependsOn": [],
      "outputs": ["dist/**", ".next/**"]
    },
    "@basestack/forms#deploy": {
      "dependsOn": ["^build", "lint"],
      "outputs": ["dist/**", ".next/**"],
      "env": []
    },
    "@basestack/uptime#start": {
      "dependsOn": [],
      "outputs": ["dist/**", ".next/**"]
    },
    "@basestack/uptime#deploy": {
      "dependsOn": ["^build", "lint"],
      "outputs": ["dist/**", ".next/**"],
      "env": []
    }
  }
}
